;;       ---
;;  the actual bar
;;       ---

[bar/bar]
override-redirect = false
fixed-center      = true

monitor  =
bottom   = false
width    = 100%
height   = 24
offset-y = 0
offset-x = 0

background = ${colors.bg}
foreground = ${colors.fg}
font-0     = ${fonts.kikon}
font-1     = ${fonts.chicago}
font-2     = ${fonts.chicago}
separator  =

modules-left   = apple-logo menu-window menu-special
modules-center =
modules-right  = date memory network

border-bottom-size = 1
border-color  = ${colors.ac}
padding-left  = 0
padding-right = 0

;;        ----
;;  colors and fonts
;;        ----

[colors]
fg = ${xrdb:color15:#e1e2e2}
bg = ${xrdb:color0:#192222}
ac = ${xrdb:color15:#884444}

[fonts]
fixed        = "fixed:size=16:style=bold;2"
fixed-bold   = "fixed:size=16:style=bold;2"
chicago      = "Chicago:size=16:style=bold;2"
gomme        = "gomme:size=16;2"
ttyp0        = "ttyp0:size=13;2"
ttyp0-bold   = "ttyp0:size=13:style=Bold;2"
bitocra      = "bitocra13;2"
bitocra-bold = "bitocra13:style=Bold;2"
hack         = "hack:size=11;2"
hack-bold    = "hack:size=11:style=Bold;2"
tamzen       = "tamzen:size=16;2"
tamzen-bold  = "tamzen:size=16:style=Bold;2"
siji         = "siji;2"
kikon        = "kikon:size=20;2"

;;    ---
;;  modules
;;    ---

[module/apple-logo]
type = custom/text
click-left = ndmen
content = "    "

[module/menu-window]
type = custom/menu
label-open = "Window  "
label-close = " x "
label-separator = " "
menu-0-0 = New
menu-0-0-exec = winm n
menu-0-1 = Close
menu-0-1-exec = winm c
menu-0-2 = Kill
menu-0-2-exec = winm k
menu-0-3 = Move
menu-0-3-exec = winm m
menu-0-4 = "Resize "
menu-0-4-exec = winm r

[module/menu-special]
type = custom/menu
label-open = Special
label-close = " x "
label-separator = " "
menu-0-0 = Restart
menu-0-0-exec = restart
menu-0-1 = Shutdown
menu-0-1-exec = halt

[module/title]
type = internal/xwindow
format = <label>
format-padding = 2

label = %title%
label-maxlen = 35

[module/workspaces]
type = internal/xworkspaces
enable-click = true
enable-scroll = true

format = <label-state>
format-padding = 2
;; pin-workspaces = true

label-active = "%name%"
label-occupied =
label-urgent =
label-empty =

[module/filesystem-label]
type = custom/text
content = "  disk  "

[module/filesystem]
type = internal/fs

mount-0 = /
interval = 10 
fixed-values = true

format-mounted = "<label-mounted>"
format-unmounted = <label-unmounted>
format-mounted-foreground = ${colors.fg}
format-mounted-background = ${colors.bg}

label-mounted = "  %free%  "
label-unmounted = %mountpoint%: unmounted!

bar-used-indicator =
bar-used-width = 10
bar-used-fill = |
bar-used-empty = |
bar-used-foreground-0 = ${colors.ac}
bar-used-foreground-1 = ${colors.ac}
bar-used-foreground-2 = ${colors.ac}
bar-used-foreground-3 = ${colors.ac}
bar-used-empty-foreground = ${colors.ac}

ramp-capacity-0 = ▁
ramp-capacity-1 = ▂
ramp-capacity-2 = ▃
ramp-capacity-3 = ▄
ramp-capacity-4 = ▅

ramp-capacity-foreground = ${colors.ac}

[module/date-label]
type = custom/text
content = "  date  "

[module/date]
type = internal/date
interval = 1.0

time = "%H%M"
date = "%m/%d"

format = "<label>"
format-padding = 2
format-foreground = ${colors.fg}
format-background = ${colors.bg}

label = "%time% %date%"

[module/network-label]
type = custom/text
content = "  network  "

[module/network]
type = internal/network
interface = wlan0

interval  = 5
accumulate-stats = true
unknown-as-up = false

format-connected = <label-connected>
format-disconnected = <label-disconnected>
format-disconnected-foreground = ${colors.fg}
format-disconnected-background = ${colors.bg}
format-connected-foreground = ${colors.fg}
format-connected-background = ${colors.bg}

label-connected = "  %ifname%  " 
;; %downspeed:8% %upspeed:8%"
label-disconnected = "nah!"

ramp-signal-0 =
ramp-signal-1 =
ramp-signal-2 =
ramp-signal-3 =
ramp-signal-4 =

[module/memory-label]
type = custom/text
content = "  memory  "

[module/memory]
type = internal/memory
interval = 2

format = "<label>"
format-prefix =
format-padding = 2
format-background = ${colors.bg}
format-foreground = ${colors.fg}

label = "%mb_used%"

bar-used-indicator =
bar-used-width = 10
bar-used-fill = |
bar-used-empty = |
bar-used-foreground-0 = ${colors.ac}
bar-used-foreground-1 = ${colors.ac}
bar-used-foreground-2 = ${colors.ac}
bar-used-foreground-3 = ${colors.ac}
bar-used-empty-foreground = ${colors.ac}

ramp-used-0 = ▁
ramp-used-1 = ▂
ramp-used-2 = ▃
ramp-used-3 = ▄
ramp-used-4 = ▅

ramp-used-foreground = ${colors.ac}
