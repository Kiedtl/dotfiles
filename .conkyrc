conky.config = {
	background = false,
	out_to_x = false,
	out_to_console = true,
	update_interval = 0.5,
	use_spacer = "none",
	cpu_avg_samples = 2,
	short_units = true,
}

conky.text = [[\
 ${memperc}%     \
 ${exec cat /sys/class/power_supply/BAT1/capacity}%    \
 ${addr wlan0}    \
 ${exec vol}    \
 ${fs_free /}    \
${exec date +'%I:%M %p'} \
]]
