;;       ---
;;  the actual bar
;;       ---

[bar/bar]
override-redirect = true
fixed-center      = true

monitor  =
bottom   = false
width    = 90%
height   = 36
offset-y = 24
offset-x = 100

background = ${colors.bg}
foreground = ${colors.fg}
font-0     = ${fonts.ttyp0}
font-1     = ${fonts.ttyp0-bold}
font-2     = ${fonts.hack}
separator  =

modules-left   = date-label date network-label network
modules-center = title
modules-right  = memory-label memory filesystem-label filesystem

border-size   = 0
border-color  = ${colors.fg}
padding-left  = 0
padding-right = 0

;;        ----
;;  colors and fonts
;;        ----

[colors]
fg = ${xrdb:color7:#e1e2e2}
bg = ${xrdb:color0:#192222}
ac = ${xrdb:color1:#884444}

[fonts]
ttyp0      = "fixed:size=13;2"
ttyp0-bold = "fixed:size=13:style=Bold;2"

hack       = "hack:size=11;2"
hack-bold  = "hack:size=11:style=Bold;2"

;;    ---
;;  modules
;;    ---

[module/title]
type = internal/xwindow
format = <label>
format-padding = 2

label = %title%
label-maxlen = 35

[module/workspaces]
type = internal/xworkspaces
enable-click = true
enable-scroll = true

format = <label-state>
format-padding = 2
;; pin-workspaces = true

label-active = "%name%"
label-occupied =
label-urgent =
label-empty =

[module/filesystem-label]
type = custom/text
content = "  disk  "

[module/filesystem]
type = internal/fs

mount-0 = /
interval = 10 
fixed-values = true

format-mounted = "<label-mounted>"
format-unmounted = <label-unmounted>
format-mounted-foreground = ${colors.bg}
format-mounted-background = ${colors.fg}

label-mounted = "  %free%  "
label-unmounted = %mountpoint%: not mounted!

bar-used-indicator =
bar-used-width = 10
bar-used-fill = |
bar-used-empty = |
bar-used-foreground-0 = ${colors.fg}
bar-used-foreground-1 = ${colors.fg}
bar-used-foreground-2 = ${colors.fg}
bar-used-foreground-3 = ${colors.fg}
bar-used-empty-foreground = ${colors.ac}

ramp-capacity-0 = ▁
ramp-capacity-1 = ▂
ramp-capacity-2 = ▃
ramp-capacity-3 = ▄
ramp-capacity-4 = ▅

ramp-capacity-foreground = ${colors.ac}

[module/date-label]
type = custom/text
content = "  date  "

[module/date]
type = internal/date
interval = 1.0

time = "%H%M"
date = "%m/%d"

format = "<label>"
format-padding = 2
format-foreground = ${colors.bg}
format-background = ${colors.fg}

label = "%time% %date%"

[module/network-label]
type = custom/text
content = "  network  "

[module/network]
type = internal/network
interface = wlan0

interval  = 5
accumulate-stats = true
unknown-as-up = false

format-connected = <label-connected>
format-disconnected = <label-disconnected>
format-disconnected-foreground = ${colors.bg}
format-disconnected-background = ${colors.fg}
format-connected-foreground = ${colors.bg}
format-connected-background = ${colors.fg}

label-connected = "  %ifname%  " 
;; %downspeed:8% %upspeed:8%"
label-disconnected = "nah!"

ramp-signal-0 =
ramp-signal-1 =
ramp-signal-2 =
ramp-signal-3 =
ramp-signal-4 =

[module/memory-label]
type = custom/text
content = "  memory  "

[module/memory]
type = internal/memory
interval = 2

format = "<label>"
format-prefix =
format-padding = 2
format-background = ${colors.fg}
format-foreground = ${colors.bg}

label = "%mb_used%"

bar-used-indicator =
bar-used-width = 10
bar-used-fill = |
bar-used-empty = |
bar-used-foreground-0 = ${colors.fg}
bar-used-foreground-1 = ${colors.fg}
bar-used-foreground-2 = ${colors.fg}
bar-used-foreground-3 = ${colors.fg}
bar-used-empty-foreground = ${colors.ac}

ramp-used-0 = ▁
ramp-used-1 = ▂
ramp-used-2 = ▃
ramp-used-3 = ▄
ramp-used-4 = ▅

ramp-used-foreground = ${colors.ac}
