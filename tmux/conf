bind r source-file ~/etc/tmux/conf

set -g escape-time 128

# status bar
set -g status on
set -g status-bg black
set -g status-fg blue
set -g status-interval 2

set -g status-justify right
setw -g window-status-format "#[bg=black,fg=brightblack]#[bg=brightblack,fg=brightwhite] #{pane_current_command} #[bg=black,fg=brightblack]"
setw -g window-status-current-format "#[bg=black,fg=yellow]#[bg=yellow,fg=black] #{pane_current_command} #[bg=black,fg=yellow]"

set -g status-justify centre
set-option -g status-right ''
set-option -g status-left ''

# colors (256, 24-bit)
set -g default-terminal "tmux-256color"
set -ga terminal-overrides ",xterm-256color:Tc"

# disable mouse
set -g mouse off

# integrate X clipboard
bind-key -T copy-mode-vi y send-keys -X copy-pipe-and-cancel "xsel -i -b"
bind-key p run "xsel -o | tmux load-buffer - ; tmux paste-buffer"

# pane indexes start at 1 instead of 0
set-option -g base-index 1
set-option -g pane-base-index 1

# window title:
set-window-option -g automatic-rename on
set-option -g set-titles on
set-option -g set-titles-string '#T'

# vi keybindings
set -g mode-keys vi

# scrollback
set -g history-limit 10000

# misc window settings
unbind p
bind p  previous-window
bind-key s choose-session

# easy-to-remember split pane commands
bind | split-window -h
bind - split-window -v
unbind '"'
unbind %

# moving between panes with vim movement keys
bind h select-pane -L
bind j select-pane -D
bind k select-pane -U
bind l select-pane -R

# moving between windows with vim movement keys
bind -r C-h select-window -t :-
bind -r C-l select-window -t :+

# resize panes with vim movement keys
bind -r H resize-pane -L 5
bind -r J resize-pane -D 5
bind -r K resize-pane -U 5
bind -r L resize-pane -R 5
